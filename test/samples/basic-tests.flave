/*#### Conditionals ####*/
/*## For Loop New Line##*/
view test{
    @for(var i = 0; i < data.length; i++)
        <li>@(data[i].content)</li>
}
/*## For Loop New Brackets##*/
view test{
    @for(var i = 0; i < data.length; i++){
        <li>@(data[i].content)</li>
    }
}
/*## While New Lines##*/
view test{
    @while(condition)
        @{condition = false;}
}
/*## While Brackets##*/
view test{
    @while(condition){
        <span>@(data.content)</span>
        @{condition = false;}
    }
}
/*## If Else New Lines##*/
view test{
    @if(data.b)<b> @(data.content) </b>
    @elseif(data.em) <em>  @(data.content) </em>
    @else
        <span>@(data.content)</span>
}
/*## If Else Brackets##*/
view test{
    @if(data.b){<b> @(data.content) </b>}
    @elseif(data.em) { <em>  @(data.content) </em>}
    @else {
        <span>@(data.content)</span>
    }
}
/*## Nested If Else New Lines##*/
view test{
    @if(data.nested)
        @if(data.b)<b> @(data.content) </b>
        @elseif(data.em) <em>  @(data.content) </em>
        @else
            <span>@(data.content)</span>
}
/*## Nested If Else Brackets##*/
view test{
    @if(data.nested){
        @if(data.b){<b> @(data.content) </b>}
        @elseif(data.em) { <em>  @(data.content) </em>}
        @else {
            <span>@(data.content)</span>
        }
    }
}
/*#### Whitespace ####*/
/*## Space Before##*/
view test{
    <span> @(data.a)</span>
}
/*## Space Between##*/
view test{
    <span>@(data.a) @(data.b)</span>
}
/*## Space After##*/
view test{
    <span>@(data.a) </span>
}
